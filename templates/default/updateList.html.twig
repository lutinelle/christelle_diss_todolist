{% extends 'default/index.html.twig' %}

{% block modal %}
    <!-- Modal edit liste -->
    <div class="modal fade" id="editListModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edition liste</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                {{ form_start (formList) }}
                <div class="m-3">
                    <label for="exampleFormControlInput1" class="form-label">Entrez le nouveau nom de la liste</label>
                    {{ form_widget(formList.name) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">OK</button>
                </div>
                {{ form_end (formList) }}
            </div>
        </div>
    </div>/div>
    </div>

{% endblock %}